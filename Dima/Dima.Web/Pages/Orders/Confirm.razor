@page "/pedidos/{number}/confirmar"
@inherits ConfirmOrderPaymentPage

@if (Order is not null)
{
    @if (Order.Status == EOrderStatus.Paid)
    {
        <h1>Pedido confirmado com sucesso!</h1>
        <p>Seu pedido foi confirmado com sucesso e agora voce tem acesso completo ao sistema.</p>
    }
    else
    {
        <h1>Ops, algo deu errado!</h1>
        <p>Seu pagamento não pode ser completado e vocâ receberá um E-mail em breve!</p>
    }
}
else
{
    <MudSkeleton Animation="Animation.Wave"></MudSkeleton>
    <MudSkeleton Animation="Animation.Wave"></MudSkeleton>
    <MudSkeleton Animation="Animation.Wave"></MudSkeleton>
    <MudSkeleton Animation="Animation.Wave"></MudSkeleton>
}